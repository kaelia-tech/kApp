# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Deploy to the Google Play Console"
  lane :dev do
    upload_to_play_store(track: 'alpha',
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      apk: './platforms/android/app/build/outputs/apk/release/app-release.apk')
  end
  lane :test do
    upload_to_play_store(track: 'beta',
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      check_superseded_tracks: true,
      apk: './platforms/android/app/build/outputs/apk/release/app-release.apk')
  end
  lane :prod do
    upload_to_play_store(track: 'production',
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true,
      check_superseded_tracks: true,
      apk: './platforms/android/app/build/outputs/apk/release/app-release.apk')
  end
end

platform :ios do
  desc "Deploy to the App Store"
  lane :dev do
    deliver(
      submit_for_review: false,
      automatic_release: false,
      force: true, # Skip HTMl report verification
      skip_metadata: true,
      skip_screenshots: true,
      ipa: './platforms/ios/ios/build/device/kApp.ipa'
    )
  end
  lane :test do
    deliver(
      submit_for_review: false,
      automatic_release: false,
      force: true, # Skip HTMl report verification
      skip_metadata: true,
      skip_screenshots: true,
      ipa: './platforms/ios/ios/build/device/kApp.ipa'
    )
  end
  lane :prod do
    deliver(
      submit_for_review: false,
      automatic_release: false,
      force: true, # Skip HTMl report verification
      skip_metadata: true,
      skip_screenshots: true,
      ipa: './platforms/ios/ios/build/device/kApp.ipa'
    )
  end
)
end