// app global css

// Classes to distinguish between the former "QCardTitle" and "QCardMain"
// (all of which are now "QCardSection")
.k-card-title {
    font-size: 18px;
    font-weight: 400;
    letter-spacing: normal;
    line-height: 2rem;
}

.k-card-main {
    font-size: 14px;
}

// Suppress "block margins" on h6 etc.
.margin-block-none {
  margin-block-start: 0;
  margin-block-end: 0;
}

// BEGIN - STYLES TAKEN FROM 'OLD QUASAR' (v.0.14.7)

blockquote {
  padding: 10px 20px;
  margin: 0 0 20px;
  font-size: 17.5px;
  border-left: 5px solid lightgrey;
}
blockquote.text-right {
  padding-right: 15px;
  padding-left: 0;
  border-right: 5px solid #C2185B;
  border-left: 0;
  text-align: right;
}
blockquote small {
  display: block;
  line-height: 1.4;
  color: #777;
}
blockquote small:before {
  content: '\2014 \00A0';
}

a {
  color: $link-color;
  text-decoration: none;
  cursor: pointer;
  outline: 0;
  transition: color 0.25s;
}
a:hover {
  color: $link-color-active;
}
a:active,
a:hover {
  outline-width: 0;
}

// To be used with "a" elements
.link {
  margin: 0;
}

p {
  font-size: 1rem;
  letter-spacing: 0;
  margin: 0 0 1rem;
  line-height: 24px;
  padding: 0;
  -webkit-font-smoothing: antialiased;
}
p.caption {
  font-weight: 300;
}
p.caption:not(:first-child) {
  margin-top: 2rem;
}

.q-toolbar__title {
  font-size: 18px;
  font-weight: 500;
  padding: 0 12px;
}

// END - STYLES TAKEN FROM 'OLD QUASAR' (v.0.14.7)
